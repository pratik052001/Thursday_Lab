import java.util.*;
public class Array {
public static void main(String[] args) {
	Scanner sc=new Scanner(System.in);
	System.out.println("Enter the size of array :");
	int n=sc.nextInt();
	System.out.println("Enter "+n+"Elements:");
	int sum=0;
	double avg=0;
    int a[]=new int[n];
    for(int i=0;i<n;i++) {
    	a[i]=sc.nextInt();
    	sum=sum+a[i]; //formula for sum of array
    }   
    System.out.println("The array is :");
    for(int i=0;i<n;i++) {
    	System.out.println(a[i]);
    }
    System.out.println("The addition of array is :"+sum);
    avg=sum/n; //formula for avarage of array
    System.out.println("The average of array is :"+avg);
}
}
